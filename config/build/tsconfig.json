{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../../dist/",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
  },
  "include": ["../../src/**/ng-module.ts"],
  "angularCompilerOptions": {
    "genDir": "../../dist/ngc"
  }
}
